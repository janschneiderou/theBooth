<UserControl xmlns:TheBooth="clr-namespace:TheBooth"  x:Class="TheBooth.HeroPlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:k="http://schemas.microsoft.com/kinect/2014"
             mc:Ignorable="d"  
             
             d:DesignHeight="600" d:DesignWidth="1100">
    <k:KinectRegion x:Name="kinectRegion" Background="AliceBlue">
        <Canvas>
            <Rectangle Fill="Beige" HorizontalAlignment="Left"
		        Height="254" Canvas.Left="950" Canvas.Top="500"
		        Stroke="DarkMagenta" StrokeThickness="5"
		        VerticalAlignment="Top" Width="400"
		        RadiusY="13.5" RadiusX="13.5" AllowDrop="True"/>
            <TheBooth:DragDropElement x:Name="Element1">
                <Rectangle Fill="Green" Height="200" Width="200" />
            </TheBooth:DragDropElement>
          

        </Canvas>
    </k:KinectRegion>
</UserControl>
